<div id="header">
	<div class="container">
		<div id="welcomeLine" class="row">
			<div class="span6" id="welcomeMessage">Welcome!<strong> User</strong></div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row justify-content-center mt-5">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header bg-dark text-white">
					<h4 class="card-title text-center">Agregar Producto</h4>
				</div>
				<div class="card-body">
					<form id="productForm" method="POST" action="/products">
						<div class="mt-3">
							<p class="text-center">ID del producto: <span id="productID"></span></p>
						</div>
						<div class="mb-3">
							<label for="title" class="form-label text-end">Título</label>
							<input type="text" class="form-control text-end" id="title" name="title" required>
						</div>
						<div class="mb-3">
							<label for="description" class="form-label text-end">Descripción</label>
							<textarea class="form-control text-end" id="description" name="description"
								required></textarea>
						</div>
						<div class="mb-3">
							<label for="price" class="form-label text-end">Precio</label>
							<input type="number" class="form-control text-end" id="price" name="price" min="0"
								step="0.01" required>
						</div>
						<div class="mb-3">
							<label for="thumbnail" class="form-label text-end">Imagen (URL)</label>
							<input type="text" class="form-control text-end" id="thumbnail" name="thumbnail" required>
						</div>
						<div class="mb-3">
							<label for="stock" class="form-label text-end">Cantidad en Stock</label>
							<input type="number" class="form-control text-end" id="stock" name="stock" min="0">
						</div>
						<div class="mb-3">
							<label for="category" class="form-label text-end">Categoría</label>
							<select class="form-select" id="category" name="category" required>
								<option value="">Seleccione una categoría</option>
								<option value="Accesories">Accesorios</option>
								<option value="Cameras">Cámaras</option>
								<option value="E-readers">E-readers</option>
								<option value="Gaming consoles">Consola de juegos</option>
								<option value="Laptops">Computadoras portátiles (Laptops)</option>
								<option value="Smartphones">Teléfonos</option>
								<option value="Tablets">Tablets</option>
								<option value="Televisions">TV</option>
								
							</select>
						</div>
						<div class="d-flex justify-content-end buttons">
							<button type="button" class="btn btn-default me-2" onclick="limpiar()">Limpiar</button>
							<button type="submit" class="btn btn-primary">Guardar</button>
						</div>
					</form>
					<div class="mt-3 text-center">
						<a href="/products" class="btn btn-link">Ver todos los productos</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

