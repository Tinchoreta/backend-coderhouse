<div class="container">
	<div class="row justify-content-center mt-5">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header bg-dark text-white">
					<h4 class="card-title text-center">Agregar Producto</h4>
				</div>
				<div class="card-body">
					<form id="productForm" method="POST" action="/products">
						<div class="mt-3 prodId">
							<p class="text-center">ID del producto: <span id="productID"></span></p>
						</div>
						<div class="mb-3">
							<label for="title" class="form-label text-end">Título</label>
							<input type="text" class="form-control text-end" id="title" name="title" required>
						</div>
						<div class="mb-3">
							<label for="description" class="form-label text-end">Descripción</label>
							<textarea class="form-control text-end" id="description" name="description"
								required></textarea>
						</div>
						<div class="mb-3">
							<label for="price" class="form-label text-end">Precio</label>
							<input type="number" class="form-control text-end" id="price" name="price" min="0"
								step="0.01" required>
						</div>
						<div class="mb-3">
							<label for="thumbnail" class="form-label text-end">Imagen (URL)</label>
							<input type="text" class="form-control text-end" id="thumbnail" name="thumbnail" required>
						</div>
						<div class="mb-3">
							<label for="stock" class="form-label text-end">Cantidad en Stock</label>
							<input type="number" class="form-control text-end" id="stock" name="stock" min="0">
						</div>
						<div class="d-flex justify-content-end">
							<button type="button" class="btn btn-default me-2" onclick="limpiar()">Limpiar</button>
							<button type="submit" class="btn btn-primary">Guardar</button>
						</div>
					</form>
					<div class="mt-3 text-center">
						<a href="/products" class="btn btn-link">Ver todos los productos</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<link href="/css/{{css}}" rel="stylesheet" type="text/css">